@model AnimalShelterWebApp.Models.InputModels.Hotel.ResidentInputModel
@{

}
<div class="container" id="footerAndBody">

    <div class="jumbotron w-100 mt-2 mb-2 bg-mainGreen text-center text-dark pt-3 pb-3">

        <h3 class="text-white">Add Animals</h3>
        @using (Html.BeginForm("Resident", "Hotel", "FormMethod.Post"))
        {
            <div class="jumbotron bg-white p-4">
                <form>
                    <div class="row m-0">
                        <div class="col-sm">
                            <input class="text-center rounded" type="text" placeholder="Name" disabled />
                        </div>
                        <div class="col-sm">
                            <input class="rounded" type="text" />
                        </div>
                        <div class="col-sm">
                            <input class="text-center rounded" type="text" placeholder="Type" disabled />
                        </div>
                        <div class="col-sm">
                            <input class="rounded" type="text" />
                        </div>
                    </div>
                    <div class="row m-0">
                        <div class="col-sm">
                            <input class="text-center rounded" type="text" placeholder="From" disabled />
                        </div>
                        <div class="col-sm">
                            <input class="rounded" type="text" />
                        </div>
                        <div class="col-sm">
                            <input class="text-center rounded" type="text" placeholder="To" disabled />
                        </div>
                        <div class="col-sm">
                            <input class="rounded" type="text" />
                        </div>
                    </div>
                    <div class="row m-0">
                        <div class="col-sm">
                            <input class="text-center rounded" type="text" placeholder="Owner e-mail" disabled />
                        </div>
                        <div class="col-sm">
                            <input class="rounded" type="email" />
                        </div>
                        <div class="col-sm">
                            <input class="text-center rounded" type="text" placeholder="Description" disabled />
                        </div>
                        <div class="col-sm">
                            <input class="rounded" type="text" />
                        </div>
                    </div>
                    <button type="button" class="btn bg-mainGreen text-center text-white mt-3 mb-0">Add Event</button>
                </form>
            </div>
        }

        <h3 class="text-white">Mange Animals</h3>
        <div class="jumbotron bg-white p-4">


            <div class="table-responsive makeMeScroll">

                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Type</th>
                            <th scope="col">From</th>
                            <th scope="col">To</th>
                            <th scope="col">Owner e-mail</th>
                            <th scope="col">Description</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td>Bob</td>
                            <td>Dog</td>
                            <td>10.02.2019</td>
                            <td>20.02.2019</td>
                            <td>owner1@gmail.com</td>
                            <td>This is a dog.</td>
                            <td> <button type="button" class="btn bg-mainGreen text-center text-white m-0">Delete</button></td>
                        </tr>
                        <tr>
                            <td>Miki</td>
                            <td>Cat</td>
                            <td>15.03.2019</td>
                            <td>20.03.2019</td>
                            <td>owner2@gmail.com</td>
                            <td>This is a cat.</td>
                            <td> <button type="button" class="btn bg-mainGreen text-center text-white m-0">Delete</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>




    </div>

    <div class="container bg-mainGreen text-white text-center">
        <p class="p-1">&copy; 2019 Joanna Piórkowaska, Karolina Makowska, Kajetan Krzewina</p>
    </div>
</div>

